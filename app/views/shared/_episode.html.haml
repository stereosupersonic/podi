.podcast-entry.bg-white.mb-5.p-2
  .row
    .col-md-3
      = link_to image_tag(episode.artwork_url(size: 200), class: "image img-thumbnail img-fluid d-block", alt: "episode artwork"), episode.episonde_url
    .col-md
      %h3.font-weight-light
        = link_to episode.title, episode.episonde_url
      .text-white.mb-3
        %span.text-black-opacity-05
          %small
            %span.sep
              = episode.published_on

      %p.mb-4
        = render_markdown truncate(episode.description, length: 500) { link_to " mehr", episode.episonde_url, class: "font-weight-bold" }

      -# .player
      -#   = render "shared/audio", episode: episode

  - if current_user&.admin?
    .p.mt-3
      = edit_button edit_admin_episode_path episode
