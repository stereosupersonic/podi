- if episode
  .episode-header.bg-dark.text-white.text-center
    %h2.header.text-white.font-weight-light.display-4
      = episode.title
  .site-blocks-cover.overlay.inner-page-cover{"data-aos" => "fade", :style => "background-image: url(#{episode.artwork_url});"}
    .container-fluid
      .row.align-items-top.justify-content-center.text-center
        .col-md-8{"data-aos" => "fade-up", "data-aos-delay" => "400"}

        .col-md-8.position-relative
          .player.pt-4.position-absolute.fixed-bottom.mb-2
            = render "shared/audio", episode: episode
