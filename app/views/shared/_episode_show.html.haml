- if episode
  .site-blocks-cover.overlay.inner-page-cover{"data-aos" => "fade", :style => "background-image: url(#{episode.artwork_url});"}
    .container-flex
      .row.align-items-center.justify-content-center.text-center
        .col-md-8{"data-aos" => "fade-up", "data-aos-delay" => "400"}
          %h2.text-white.text-nowrap.font-weight-light.mb-2.display-4
            =  "Episode #{episode.number}: #{episode.title}"
          .text-white.mb-3
            %span.text-white-opacity-05
              %small
                = episode.published_on

          .player{id: "player"}
            -# %root{:style => ""}
            -# https://docs.podlove.org/podlove-web-player/templating.html

            -# .flex.w-full
            -#   %progress-bar
            -# .flex.w-full.justify-between
            -#   .text-left{:class => "w-3/12"}
            -#     %timer-current.text-sm
            -#   .text-right{:class => "w-3/12"}
            -#     %timer-duration.text-sm
            %root.p-4.flex.items-center{:style => "max-width:950px;min-width:260px;"}
              %play-button
              %progress-bar
              .p-4
                %play-state{:on => "initialize"}
                  %span On Initialize
                %play-state{:on => "active"}
                  %span On Active
                %play-state{:on => "ended"}
                  %span On Ended
