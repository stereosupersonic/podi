!!!
%html{lang: current_setting.language}
  %head
    %title= current_setting.title
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    %meta{:content => current_setting.short_description, :name => "description"}/
    %meta{:content => current_setting.seo_keywords.join(",") , :name => "keywords"}/
    %meta{:content => current_setting.author , :name => "author"}/
    %link{:href => "/public/favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "public/apple-touch-icon-144-precomposed-2.png", :rel => "apple-touch-icon-precomposed", :sizes => "144x144"}/
    %link{:href => current_setting.canonical_url, :rel => "canonical"}/




    -# %link{:href => "css/magnific-popup.css", :rel => "stylesheet"}/

    -# %link{:href => "css/owl.carousel.min.css", :rel => "stylesheet"}/
    -# %link{:href => "css/owl.theme.default.min.css", :rel => "stylesheet"}/
    -# %link{:href => "https://cdn.jsdelivr.net/npm/mediaelement@4.2.7/build/mediaelementplayer.min.css", :rel => "stylesheet"}/
    -# %link{:href => "css/aos.css", :rel => "stylesheet"}/

    = auto_discovery_link_tag :rss, episodes_url(:format => :rss)
    = csrf_meta_tags
    = csp_meta_tag

    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    = stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'

  %body{id: "main", :class => "#{controller_name} #{action_name}"}
    .site-wrap
      .site-mobile-menu
        .site-mobile-menu-header
          .site-mobile-menu-close.mt-3
            %span.icon-close2.js-menu-toggle
        .site-mobile-menu-body
      %header.site-navbar.py-4.absolute.transparent{:role => "banner"}
        .container
          .row.align-items-center
            .col-6{"data-aos" => "fade-down"}
              %h1
                %a.text-white.h2{:href => root_path }
                  = current_setting.title
            .col-6{"data-aos" => "fade-down"}
              %nav.site-navigation.position-relative.text-right.text-md-right{:role => "navigation"}
                %ul.nav.navbar-light.bg-light.mr-auto
                  %li.nav-item
                    %a.nav-link{:href => episodes_path} Archiv
                  %li.nav-item
                    %a.nav-link{:href => about_path } Über uns
                  - if user_signed_in?
                    - if current_user&.admin?
                      = link_to "Administration", admin_episodes_path, class: "nav-link"
                      = link_to "Settings", "#", class: "nav-link"
                    = link_to "Account", edit_user_registration_path, class: "nav-link"
                    = link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link"
                  - else
                    = link_to "Login", new_user_session_path, class: "nav-link"


      .site-blocks-cover.overlay{"data-aos" => "fade", "data-stellar-background-ratio" => "0.5",
        :style => "background-image: url(#{asset_pack_path('media/images/hero_bg_1.jpg')});"}
        .container
          .row.align-items-center.justify-content-center.text-center
            .col-md-8{"data-aos" => "fade-up", "data-aos-delay" => "400"}
              %h2.text-white.font-weight-light.mb-2.display-4
                HEADER

      .container-fluid
        = yield
      %footer.site-footer
        .container
          .row
            .col-lg-4
              .mb-5
                %h3.footer-heading.mb-4 Wartenberger Podcast
                %p
                  = current_setting.short_description

            .col-lg-4.mb-5.mb-lg-0
              .row.mb-5
                .col-md-12
                  %h3.footer-heading.mb-4 Quick Menu
                .col-md-6.col-lg-6
                  %ul.list-unstyled
                    %li
                      %a{:href => root_path } Home
                .col-md-6.col-lg-6
                  %ul.list-unstyled
                    %li
                      %a{:href => about_path} Über Uns
                    %li
                      %a{:href => imprint_path} Impressum
                    %li
                      %a{:href => privacy_path} Datenschutz

            .col-lg-4.mb-5.mb-lg-0
              .mb-5
                %h3.footer-heading.mb-4 Follow Us
                %div
                  %a.pl-0.pr-3{:href => "#"}
                    %span
                      %i.fab.fa-facebook
                  %a.pl-3.pr-3{:href => "#"}
                    %span
                      %i.fab.fa-twitter
                  %a.pl-3.pr-3{:href => "#"}
                    %span
                      %i.fab.fa-instagram

          .row.pt-5.mt-5.text-center
            .col-md-12
              %p
                Copyright ©
                = Date.current.year
                %a{:href => "mailto:admin@wartenberger.de", :target => "_blank"}
                  Wartenberger
