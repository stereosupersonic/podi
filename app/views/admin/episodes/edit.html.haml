.site-section.bg-light
  .container
    .row
      .col-md-12
        %h1 Editing Episode

        = simple_form_for(@episode_updater, url: admin_episode_path(@episode_updater.id), method: :patch, html: { class: 'form-horizontal' })do |f|
          .form-inputs
            = render "form", f: f
          .form-actions
            = submit_button

        = back_button admin_episodes_path
