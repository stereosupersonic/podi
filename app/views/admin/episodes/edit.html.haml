.site-section.bg-light
  .container
    .row
      .col-md-12
        %h1 Editing Episode
        = simple_form_for([:admin, @episode], html: { class: 'form-horizontal' })do |f|
          = f.error_notification
          = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

          .form-inputs
            = render "form", f: f
          .form-actions
            = submit_button

        = back_button admin_episodes_path
