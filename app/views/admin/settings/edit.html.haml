%h1 Edit setting


.site-section.bg-light
  .container
    .row
      .col-md-12
        %h1 Edit Setting

        = simple_form_for([ :admin, @setting ], method: :patch, html: { class: "form-horizontal" }) do |f|
          = show_button "https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet", "Markdown Help"
          .form-inputs
            = f.input :title, hint: "The show title."
            = f.input :description, as: :text, input_html: { cols: 5, rows: 10 }, hint: "The show description. max 4000"

            = f.input :language
            = f.input :itunes_language, hint: "The language spoken on the show. ISO 639 e.g. en-us"
            = f.input :seo_keywords, hint: "comma separated words", as: :text, input_html: { cols: 5, rows: 10 }

            = f.input :author, hint: "used for feed"
            = f.input :owner, hint: "used for feed"
            = f.input :email, hint: "used for feed"
            = f.input :itunes_category, hint: "used for feed"
            = f.input :itunes_sub_category, hint: "used for feed"

            = f.input :logo_url, hint: "The artwork for the show"
            = f.input :default_episode_artwork_url, hint: "fallback if an episode has no image"

            = f.input :about_episode_number, hint: "Episode is shown on the about page "

            = f.input :facebook_url
            = f.input :youtube_url
            = f.input :twitter_url
            = f.input :instagram_url
            = f.input :itunes_url
            = f.input :spotify_url
            = f.input :google_url

          .form-actions
            = submit_button

        = back_button root_url
