.bg-ligh

  %h1 Status

  %h2 Episodes
  %table.table.table-striped.table-bordered
    %thead.thead-dark
      %tr
        %th Status
        %th Status
        %th Name
        %th Image
        %th Audio
        %th
    %tbody
      - @episodes.each do |episode|
        %tr{id: "episode-#{episode.id}", class: "text-nowrap"}
          %td= episode.status
          %td= episode.status_text
          %td= episode.slug
          %td
            = show_status episode.image_status.status
            = episode.image_status.status
            = link_to truncate(episode.artwork_url), episode.artwork_url
          %td
            = show_status episode.audio_status.status
            = episode.audio_status.status
            = link_to truncate(episode.none_tracking_mp3_url), episode.none_tracking_mp3_url
          %td= edit_button edit_admin_episode_path(episode)
