- title = "Alle Episoden"
- content_for(:html_title) { title }
.container-fluid

  .row.mt-3.mb-3.align-items-center.justify-content-center.text-center
    .col-md-8
      %h1.font-weight-light.mb-2.display-4
        = title
  - @episodes.each do |episode|
    .row.align-items-center.justify-content-center.text-center
      .col-md-12
        = render "shared/episode", episode: episode

  =will_paginate @episodes_records, renderer: WillPaginate::ActionView::BootstrapLinkRenderer
