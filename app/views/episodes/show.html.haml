- cache_if !current_user&.admin?, @episode do
  = render "shared/episode_show", episode: @episode
  #fb-root

  .site-section.bg-light

    .container-fluid
      .row{"data-aos" => "fade-up"}
        .col-md-12

          .row.align-items-center
            .col-4
            .col-4.text-center
              %h3
                Beschreibung
              = render_markdown @episode.description

          .row.align-items-center.mt-5.show-nodes
            .col-4
            .col-4.text-center
              %h3
                Show Notes
              = render_markdown @episode.nodes
          .row
            .col-4
            .col-4
            .col-4.align-items-right
              -# FACEBOOK SHAREBUTTON
              .fb-like{
                "data-action" => "like",
                "data-href" => @episode.episonde_url,
                "data-layout" => "standard",
                "data-share" => "true",
                "data-size" => "large",
                "data-width" => ""}
    .container
      .row
        %h2 Pod love

        .col-md-12
          = render "podlove", episode: @episode
  - if current_user&.admin?
    .p.mt-3
      = edit_button  edit_admin_episode_path @episode
