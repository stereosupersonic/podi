{
  "name": "podi",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.2",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "8.0.0-beta.1",
    "@podlove/web-player": "^5.12.1",
    "autoprefixer": "^10.4.16",
    "bootstrap": "^4.5.3",
    "esbuild": "^0.13.15",
    "jquery": "^3.5.1",
    "nodemon": "^3.0.1",
    "popper.js": "^1.16.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "sass": "^1.69.5"
  },
  "version": "0.1.0",
  "scripts": {
    "build": "mkdir -p ./public/podlove-web-player && cp -rf ./node_modules/@podlove/web-player/* ./public/podlove-web-player/ && esbuild /javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets",
    "build:css:compile": "sass ./app/assets/stylesheets/application.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "build:css:prefix": "postcss ./app/assets/builds/application.css --use=autoprefixer --output=./app/assets/builds/application.css",
    "build:css": "yarn build:css:compile && yarn build:css:prefix",
    "watch:css": "nodemon --watch ./app/assets/stylesheets/ --ext scss --exec \"yarn build:css\""
  }
}
